{
  "name": "ableton-rag",
  "private": true,
  "version": "0.0.2",
  "description": "An AI-powered assistant for Ableton Live documentation",
  "author": {
    "name": "Todd Greco",
    "email": "todd.greco@slalom.com"
  },
  "type": "module",
  "main": "electron/index.cjs",
  "scripts": {
    "dev": "vite",
    "server": "node server.js",
    "start": "concurrently \"npm run dev\" \"npm run server\"",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "vite build && electron-builder",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "vitest run",
    "test:backend": "node --experimental-vm-modules node_modules/jest/bin/jest.js server.test.js",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@langchain/community": "^0.0.15",
    "@mui/icons-material": "^5.15.2",
    "@mui/material": "^5.15.2",
    "chromadb": "^1.7.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "follow-redirects": "^1.15.9",
    "langchain": "^0.0.213",
    "markdown-it": "^14.1.0",
    "pdf-parse": "^1.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "@babel/preset-env": "^7.26.0",
    "@babel/register": "^7.25.9",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^29.7.0",
    "jsdom": "^23.0.1",
    "supertest": "^6.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.0.4",
    "wait-on": "^8.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "extensionsToTreatAsEsm": [
      ".js"
    ]
  },
  "vitest": {
    "environment": "jsdom",
    "setupFiles": [
      "./src/setupTests.js"
    ],
    "globals": true,
    "css": true
  },
  "build": {
    "appId": "com.ableton.rag",
    "productName": "Ableton RAG",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "build/icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.sandbox.plist",
      "entitlementsInherit": "build/entitlements.mac.sandbox.plist",
      "identity": null
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "src/ollama/**/*",
      "vector_store/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "extraResources": [
      {
        "from": "src/ollama",
        "to": "ollama",
        "filter": ["**/*"]
      },
      {
        "from": "vector_store",
        "to": "vector_store",
        "filter": ["**/*"]
      }
    ]
  }
}
